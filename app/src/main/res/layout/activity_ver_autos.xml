<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerAutos">

    <TextView
        android:id="@+id/tvV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="Mostrar Autos"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/spVIdAutos"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spVIdAutos"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/btVSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvV2"
        app:layout_constraintTop_toBottomOf="@+id/tvV1" />

    <TextView
        android:id="@+id/tvV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Seleccione ID"
        app:layout_constraintEnd_toStartOf="@+id/spVIdAutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btVMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Mostrar"
        app:backgroundTint="#009688"
        app:layout_constraintStart_toEndOf="@+id/btVSalir"
        app:layout_constraintTop_toBottomOf="@+id/tvV2" />

    <TextView
        android:id="@+id/tvV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:text="Datos:"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/btVMostrar"
        app:layout_constraintTop_toBottomOf="@+id/btVMostrar" />

    <Button
        android:id="@+id/btVSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="Salir"
        app:layout_constraintBaseline_toBaselineOf="@+id/btVMostrar"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="164dp"
        android:layout_height="156dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvV3"
        app:layout_constraintVertical_bias="0.469">

        <TextView
            android:id="@+id/tvV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Chasis"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cilindrada"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Auto"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio de Venta"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvV10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color de CarrocerÃ­a"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="212dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/tvV3"
        app:layout_constraintVertical_bias="0.469">

        <TextView
            android:id="@+id/tvVMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVChasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVCilindrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVTipoAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvVColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>